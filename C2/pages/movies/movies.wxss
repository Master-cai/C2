/* pages/movies/movies.wxss */
/* 头部框 */
.head-title{
  width: 100%;
  height:150rpx;
  background: #fff;
  padding-top: 30rpx;
  /* padding-left: 20rpx; */
}
/* 电影名字 */
.head-title .titles .title{
  font-size: 40rpx;
  margin-left: 40rpx;
  margin-bottom: 20rpx;
}
/* 放映时间 */
.head-title .titles .times{
  font-size: 30rpx;
  color: #a7a7a7;
  margin-left: 40rpx;
  margin-bottom: 30rpx;
}
/* 横线 */
.head-title .line{
  width: 95%;
  height: 1rpx;
  background: #e7e7e7;
  position: absolute;
  right: 0;
}
/* 三个座位的框 */
.head-seat{
  width: 100%;
  height: 71rpx;   
  background: #fff;
}
.head-seat .seat{
  width: 65%;
  position: relative;
  left: 50%;
  transform: translate(-50%);
  display: flex;
  font-size: 30rpx;
}
/* 可选 */
.head-seat .seat .seat1{
  display: flex;
  margin-right: 30rpx;
  margin-top: 10rpx;
}
/* 已售 */
.head-seat .seat .seat2{
  display: flex;
  margin-right: 30rpx;
  margin-top: 10rpx;
}
/* 图片大小 */
.head-seat .seat image{
  width: 50rpx;
  height: 40rpx;
}
.head-seat .seat .seat3{
  margin-top: 10rpx;
  display: flex;
}
/* 虚线框 */
.head-seat .seat .seat3 .seat3-nice{
  width: 40rpx;
  height: 30rpx;
  border: 1px dashed #f40404;
  border-radius: 5rpx;
}
/* 最主要部分：座位分布区域 */
.seat-change{
  width: 100%;
  height: 700rpx;
  background: #faf8fa;
}
/* 在哪里观影 */
.seat-change .seat-change-title{
  width: 40%;
  text-align: center;
  position: relative;
  left: 50%;
  transform: translate(-50%);
  font-size: 35rpx;
  background: #e7e7e7;
}
.seat-change .seat-change1{
  width: 85%;
  height: 550rpx;
  margin-left: 80rpx;
  margin-top: 40rpx;
}
.seat-change .seat-change1 image{
  width: 50rpx;
  height: 40rpx;
}
/* 座位推荐 */
.seat-recommend{
  width: 100%;
  height: 100rpx;
  display: flex;
  padding-top:30rpx;
  /* padding-left: 20rpx; */
}
.seat-recommend text{
  margin-left: 20rpx;
}
.seat-recommend view{
  width: 100rpx;
  height: 60rpx;
  font-size: 30rpx;
  line-height: 60rpx;
  border: 1px solid #e7e7e7;
  text-align: center;
}
.seat-recommend .seat-recommend1{
  margin-right: 20rpx;
}
.seat-recommend .seat-recommend2{
  margin-right: 20rpx;
}
.seat-recommend .seat-recommend3{
  margin-right: 20rpx;
}

.seat-chooseFinish{
  width: 100%;
  height: 150rpx;
  font-size: 35rpx;
  background: #fff;
  z-index: 99;
  display: flex;
  padding-top:30rpx;
  position: absolute;
  bottom: 120rpx;
}
.seat-chooseFinish view{
  width: 18%;
  height: 80rpx;
  border: 1px solid #e7e7e7;
  border-radius: 5rpx;
  margin-left: 10rpx;
  padding: 5rpx;
}
/* 点击购买 */
.seat-buy{
  width: 100%;
  height: 120rpx;
  text-align: center;
  line-height: 120rpx;
  color: white;
  font-size: 40rpx;
  position: absolute;
  bottom: 0;
  background: #f40404;
}